#!/usr/bin/env groovy

pipeline {
    agent any

    stages {
        stage('init') {
            steps {
                script {
                    def sbtHome = tool 'sbt'
                    env.sbt= "${sbtHome}/bin/sbt -no-colors -batch"

                    checkout([$class: 'GitSCM',
                              branches: [[name: '*/master']],
                              doGenerateSubmoduleConfigurations: false,
                              extensions: [
                                      [$class: 'SparseCheckoutPaths',  sparseCheckoutPaths:[[$class:'SparseCheckoutPath', path:'play-a/']]]
                              ],
                              submoduleCfg: [],
                              userRemoteConfigs: [[url: 'https://github.com/bartschuller/monorepo-experiments.git']]])
                }
            }
        }
        stage('Test') {
            steps {
                sh "$sbt test"
            }
            post {
                always {
                    junit "target/test-reports/*.xml"
                }
            }
        }
//        stage('Deploy') {
//            steps {
//                echo 'Deploying....'
//            }
//        }
    }
}