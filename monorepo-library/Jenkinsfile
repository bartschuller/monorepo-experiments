#!/usr/bin/env groovy

pipeline {
    agent none
    options {
        skipDefaultCheckout true
    }
    stages {
        stage('init') {
            steps {
                script {
                    def sbtHome = tool 'sbt'
                    env.sbt= "${sbtHome}/bin/sbt -no-colors -batch"
                }
            }
        }
        stage('Test') {
            agent {
                node {
                    label 'common-ws-agent'
                    customWorkspace 'monorepo-experiments-master'
                }
            }
            steps {
                sh "cd monorepo-library && $sbt test publish"
            }
            post {
                always {
                    junit "monorepo-library/target/test-reports/*.xml"
                }
            }
        }
//        stage('Deploy') {
//            steps {
//                echo 'Deploying....'
//            }
//        }
    }
}